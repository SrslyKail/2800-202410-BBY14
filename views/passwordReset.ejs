<%- include("templates/header") %>

<div class="row d-flex justify-content-center g-2">
  <div class="w-75 pt-2">
    <div class="card text-black" style="border-radius: 25px">
      <div class="card-body p-md-5">
        <div class="row justify-content-center">
          <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
            <h2 class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
              Reset your password
            </h2>
            <div class="d-flex justify-content-center text-center">
              Enter the email address associated with your account <br>
              and we'll send you a link to reset your password.
            </div><br>

            <form class="mx-1 mx-md-4" action="/passwordResetting" method="post">

              <div class="d-flex flex-row align-items-center mb-4">
                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                  <input name="email" type="email" placeholder="Email" class="form-control" required />
                </div>
              </div>

              <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">
                  Search for my email
                </button>
              </div>
              <div class="text-center">
                <br>
                <p>Didn't forget? <a class='link' href="/login">login</a></p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% if(locals.result) { %>
<div class="row text-center h5 fw-bold mb-5 mx-1 mx-md-4 mt-4 "><%-result%></div>
<% } %>

<%- include("templates/footer") %>