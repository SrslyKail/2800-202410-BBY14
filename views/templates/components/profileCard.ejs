  #profileIcon * {
    border: 1px;
    border-radius: 20%;
    height: 16vh !important;
    width: auto;
  }

  /* this is here because i only need these styles applied to this specific table */
  table {
    border: 1px solid gray;
    background-color: lightgray;
    border-radius: 15px;
    border-collapse: separate;
    padding: 2%;
    margin: 2% 0 2% 0;
