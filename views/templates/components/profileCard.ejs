<div class="d-flex justify-content-center">
  <table>
    <tr>
      <td>
        <a id="profileIcon" href="/profile?id=<%= userCard.username %>"><%- include("profileIcon", {userIcon: userCard.userIcon}) %></a>
      </td>
      <td>
        <div style="font-weight: bold;"><%= userCard.username %></div>
        <div>rating</div><!-- unsure where this is going to be stored and how -->
        <div class="truncate">
          <%- userCard.skills.slice(0, 2).join(", ") %>
          <%if (userCard.skills.length > 2) {%>. . .<%}%>
        </div>
        <div class="truncate text-body-secondary"><%= userCard.location %>
        </div>
      </td>
    </tr>
  </table>
</div>

<!--todo figure out how to add styles to children without clunky id-ing....-->
