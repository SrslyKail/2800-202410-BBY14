<!DOCTYPE html>
<html lang="en">

<head>
  <% var isHomePage = false %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>BARTER</title>

  <!-- Import our default style sheet -->
  <link href="/styles/style.css" rel="stylesheet">
  <!-- Import Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Import Bootstrap ICONS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  <!-- Import favicon -->
  <link rel="icon" type="image/x-icon" href="/styles/favicon.ico">
  <!-- Import our default style sheet -->
  <link href="/styles/style.css" rel="stylesheet">
  <link href="/styles/cardIconStyle.css" rel="stylesheet">
</head>

<body>
  <%- include("svgs") %>
  <!-- #region navbar  -->
  <!-- Adjust colors and expand breakpoint here -->
  <nav class="navbar flex-nowrap gap-2 navbar-expand-md navbar-dark bg-dark">
    <a class="vh-5 m-2 d-inline-flex navbar-brand" href="/"><%- include("components/logo") %></a>
    <!-- Search bar -->
    <% if (!(typeof index !== 'undefined')) { %>
    <%- include("components/searchbar", {}) %>
    <% } else { %>
    <div style="flex-grow: 1;"></div>
    <% } %>
    <button id="profileButton" type="button" class="btn vh-5 m-2 d-inline-flex navbar-brand" data-bs-toggle="modal" data-bs-target="#optionsOverlay">
      <%- include("components/profileIcon.ejs", {classes: "rounded-circle"}) %> </button>
  </nav>
  <!-- #endregion navbar -->
  <!-- #region modal -->
  <div class="modal" id="optionsOverlay" tabindex="-1" aria-labelledby="optionsOverlayLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl my-0 fixed-bottom">
      <div class="modal-content rounded-top-5">
        <div class="modal-body container-fluid">
          <!-- ! CB: TODO Make this a loop and have the links/text passed in as an object from the server. That'll keep styling more consistent. -->
          <% if (locals.authenticated) { %>
          <% console.log("user is authenticated") %>
          <div class="d-flex flex-column gap-1 text-start">
            <a class="fs-3 text-decoration-none text-black" href="/signup"><b>Sign up</b></a>
            <a class="fs-3 text-decoration-none text-black" href=" /login"><b>Log in</b></a>

            <a class="fs-3 text-decoration-none text-black" href="/profile"><b>View Profile</b></a>
            <a class="fs-3 text-decoration-none text-black" href="/history"><b>History</b></a>
            <a class="fs-3 text-decoration-none text-black" href="/settings"><b>Settings</b></a>
            <a class="fs-3 text-decoration-none text-black" href="/legal"><b>Legal</b></a>
            <a class="fs-3 text-decoration-none text-black" href="/logout"><b>Log out</b></a>
          </div>
        </div>
        <% } else { %>
        <% console.log("user is NOT authenticated") %>
        <div class="d-flex flex-column mx-2 text-center">
          <a class="fs-3 text-decoration-none text-black" href="/signup"><b>Sign up</b></a>
          <a class="fs-3 text-decoration-none text-black" href=" /login"><b>Log in</b></a>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  </div>
  <!-- #endregion modal -->

  <div class="d-flex flex-column justify-content-around overflow-x-hidden mx-0">
    <!-- Main content container beginning -->