        data-bs-target="#optionsOverlay">
        <% if (!locals.authenticated) { %>
          <%- include("components/profileIconLoggedOut") %>
          <% } else { %>
            <%- include("components/profileIcon") %>
            <% } %>
    </a>

    <div class="modal" id="optionsOverlay" tabindex="-1" aria-labelledby="optionsOverlayLabel" aria-hidden="true">
      <div class="modal-dialog modal-xl">
        <div class="modal-content rounded-0">
